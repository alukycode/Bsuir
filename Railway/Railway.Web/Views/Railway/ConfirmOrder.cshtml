@model Railway.Web.Models.Railway.ConfirmOrderViewModel

@{
    ViewBag.Title = "ConfirmOrder";
}

<ol class="breadcrumb">
    <li>Route</li>
    <li>Train</li>
    <li>Car</li>
    <li>Passengers</li>
    <li class="active">Order</li>
</ol>

<h2>Confirm Order</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-2">Order ID</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.OrderId (@Model.OrderDate)</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Route</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.TripStartStationName - @Model.TripDestinationStationName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Trip Time</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.TripStartDate - @Model.TripDestinationDate</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Train #</label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.TrainNumber</p>
        </div>
    </div>
    @{ var passenger = Model.OrderPassengers.First(); }
    <div class="form-group">
        <label class="control-label col-sm-2">Passenger</label>
        <div class="col-sm-10">
            <p class="form-control-static">@passenger.FirstName @passenger.LastName</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Identification</label>
        <div class="col-sm-10">
            <p class="form-control-static">@passenger.DocumentTypeName #@passenger.DocumentNumber</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Seat</label>
        <div class="col-sm-10">
            <p class="form-control-static">Car: #@passenger.CarIndex, Seat: #@passenger.SeatIndex</p>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Cost</label>
        <div class="col-sm-10">
            <p class="form-control-static">$@Model.TotalCost</p>
        </div>
    </div>
</div>


<a href="@Url.Action("SelectRoute", "Railway")" class="btn btn-default">Buy another ticket</a>
<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Go to start page</a>
